<UserControl x:Class="Cryptor.MonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cryptor"
             xmlns:model="clr-namespace:Cryptor.Model"
             mc:Ignorable="d" 
             Height="90" Width="{Binding ElementName=CurrencyListView, Path=Width}"
             MinWidth="{Binding ElementName=CurrencyListView, Path=Width}"
             MaxWidth="{Binding ElementName=CurrencyListView, Path=Width}">
    <Border BorderBrush="#FF1986D1" BorderThickness="1" VerticalAlignment="Top">
        <StackPanel>
            <Button Content="X"
                HorizontalAlignment="Right"
                Height="20"
                Width="20"/>
            <Grid Height="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Symbol}"
                       Grid.Row="0"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PriceUsd}"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PriceBtc}"
                       Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding LastUpdated}"
                       Grid.Row="2"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
            <Grid Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding PercentChange1Hour}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
                <TextBlock Text="{Binding PercentChange24Hours}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="1"/>
                <TextBlock Text="{Binding PercentChange7days}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Column="2"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
