<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="mainControlBackground">
        <GradientStop Color="#333333" Offset="0" />
        <GradientStop Color="#768555" Offset="0.75" />
        <GradientStop Color="#222222" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="itemBackgroundSelected" Color="#003300"/>
    <SolidColorBrush x:Key="itemBackgroundUnselected" Color="#CCFFCC"/>
</ResourceDictionary>